<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView        
        style="@style/ImageViewLogoStyle"        
        android:layout_marginTop="@dimen/login_logo_top_margin"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/login_registe_bottom_margin"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/registe"
                style="@style/ButtonNormalStyle"
                android:background="@drawable/login_registe_bg"
                android:text="@string/registe"
                android:textColor="@drawable/btn2_color"
                android:textSize="@dimen/login_btn_textsize" />

            <View
                style="@style/ViewSpaceForHorizontal"
                android:layout_width="@dimen/login_btn_item_space" />

            <Button
                android:id="@+id/login"
                style="@style/ButtonNormalStyle"
                android:background="@drawable/login_login_bg"
                android:text="@string/login"
                android:textColor="@drawable/btn_color"
                android:textSize="@dimen/login_btn_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/login_3p_bottom_margin"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/qq"
                style="@style/ImageButtonNormalStyle"
                android:src="@drawable/btn_qq" />

            <View
                style="@style/ViewSpaceForHorizontal"
                android:layout_width="@dimen/login_3p_item_space" />

            <ImageView
                android:id="@+id/weibo"
                style="@style/ImageButtonNormalStyle"
                android:src="@drawable/btn_weibo" />

            <View
                style="@style/ViewSpaceForHorizontal"
                android:layout_width="@dimen/login_3p_item_space" />

            <ImageView
                android:id="@+id/wechat"
                style="@style/ImageButtonNormalStyle"
                android:src="@drawable/btn_wechat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/login_tryout_bottom_margin"
            android:orientation="vertical" >

            <Button
                android:id="@+id/try_out"
                style="@style/ButtonTextStyle"
                android:text="@string/try_out" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>